<manifest xmlns:android="http://schemas.android.com/apk/res/android" 
    package="org.greenmileage.test">
  <!-- This application tag indicates that this package needs to link against the android.test
  library, which is needed when building test cases. -->    
  <application>
    <uses-library android:name="android.test.runner" />
  </application>
  <instrumentation android:name="android.test.InstrumentationTestRunner"
      android:targetPackage="org.greenmileage"
      android:label="Green Mileage tests">
  </instrumentation>  
</manifest>